@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #3B73B9;
        font-family: Arial, sans-serif;
        color: white;
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    .titulo {
        font-size: 28px;
        font-weight: bold;
        text-transform: uppercase;
        margin-bottom: 40px;
        text-align: center;
    }

    .container-login {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        background-color: rgba(0, 0, 0, 0.1);
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        gap: 40px;
    }

    .form-box {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .form-box2 {
        display: flex;
        flex-direction: column;
    }

        .form-box label {
            font-weight: bold;
            margin: 10px 0 5px;
        }

        .form-box input[type="text"],
        .form-box input[type="password"] {
            padding: 10px;
            border: none;
            border-radius: 5px;
            width: 250px;
        }

        .form-box button {
            margin-top: 20px;
            padding: 10px;
            background-color: #D9FF6A;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            color: black;
            cursor: pointer;
            font-size: 16px;
        }

    .monster-img {
        max-width: 250px;
    }

    .mensaje-error {
        color: #ffaaaa;
        margin-top: 10px;
        font-weight: bold;
        text-align: center;
    }
</style>

<div class="titulo">
    Cliente de Web<br />
    Conversión de Unidades
</div>

<div class="container-login">
    <div class="form-box">
        <form method="post" class="form-box2">
            <label for="usuario">Usuario:</label>
            <input type="text" name="usuario" required />

            <label for="clave">Contraseña:</label>
            <input type="password" name="clave" required />

            <button type="submit">INGRESAR</button>

            @if (ViewBag.Mensaje != null)
            {
                <div class="mensaje-error">@ViewBag.Mensaje</div>
            }
        </form>
    </div>

    <img src="~/Imagenes/monsterLogin.png" alt="Monsters" class="monster-img" />
</div>
