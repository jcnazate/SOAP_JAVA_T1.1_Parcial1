<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/miketemperatura"
    android:padding="16dp">

    <!-- Capa semi-transparente para suavizar el fondo -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTemperatureTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="CONVERSIÓN DE TEMPERATURA"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@+id/textViewCelsiusToKelvin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCelsiusToKelvin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="DE CELSIUS A KELVIN"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@+id/editTextCelsius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTemperatureTitle" />

    <EditText
        android:id="@+id/editTextCelsius"
        android:layout_width="221dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Valor (celsius)"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:textSize="16sp"
        android:background="@android:drawable/edit_text"
        android:backgroundTint="#80000000"
        android:padding="12dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonConvertCelsiusToKelvin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCelsiusToKelvin" />

    <Button
        android:id="@+id/buttonConvertCelsiusToKelvin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="CONVERTIR"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewResultKelvin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCelsius" />

    <TextView
        android:id="@+id/textViewResultKelvin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="0.00K"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@+id/textViewKelvinToCelsius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonConvertCelsiusToKelvin" />

    <TextView
        android:id="@+id/textViewKelvinToCelsius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="DE KELVIN A CELSIUS"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@+id/editTextKelvin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultKelvin" />

    <EditText
        android:id="@+id/editTextKelvin"
        android:layout_width="211dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Valor (kelvin)"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:textSize="16sp"
        android:background="@android:drawable/edit_text"
        android:backgroundTint="#80000000"
        android:padding="12dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonConvertKelvinToCelsius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewKelvinToCelsius" />

    <Button
        android:id="@+id/buttonConvertKelvinToCelsius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="CONVERTIR"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewResultCelsius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextKelvin" />

    <TextView
        android:id="@+id/textViewResultCelsius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="0.00°C"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@+id/buttonBackToMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonConvertKelvinToCelsius" />

    <Button
        android:id="@+id/buttonBackToMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="REGRESAR AL MENÚ"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#9C27B0"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultCelsius" />

</androidx.constraintlayout.widget.ConstraintLayout>
