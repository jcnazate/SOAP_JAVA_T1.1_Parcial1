<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<appSettings>
		<add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
	</appSettings>

	<system.web>
		<compilation debug="true" />
	</system.web>

	<system.serviceModel>
		<services>

			<!-- Servicio de Conversión -->
			<service name="Servidor_DotNet_SOAP_GR08.ec.edu.monster.controlador.ConversionService"
					 behaviorConfiguration="ServicioBehavior">
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8733/Design_Time_Addresses/Servidor_DotNet_SOAP_GR08/ConversionService/"/>
					</baseAddresses>
				</host>

				<!-- Endpoint SOAP -->
				<endpoint address=""
						  binding="basicHttpBinding"
						  contract="Servidor_DotNet_SOAP_GR08.ec.edu.monster.service.IConversionUnidadesServicio">
					<identity>
						<dns value="localhost" />
					</identity>
				</endpoint>

				<!-- Endpoint de metadatos -->
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
			</service>

			<!-- Servicio de Login (si lo tienes) -->
			<service name="Servidor_DotNet_SOAP_GR08.ec.edu.monster.controlador.LoginService"
					 behaviorConfiguration="ServicioBehavior">
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8733/Design_Time_Addresses/Servidor_DotNet_SOAP_GR08/LoginService/"/>
					</baseAddresses>
				</host>

				<endpoint address=""
						  binding="basicHttpBinding"
						  contract="Servidor_DotNet_SOAP_GR08.ec.edu.monster.service.ILoginServicio">
					<identity>
						<dns value="localhost" />
					</identity>
				</endpoint>

				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
			</service>

		</services>

		<behaviors>
			<serviceBehaviors>
				<behavior name="ServicioBehavior">
					<!-- Publica WSDL -->
					<serviceMetadata httpGetEnabled="true" />
					<!-- Útil para depurar -->
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>
			</serviceBehaviors>
		</behaviors>

		<!-- Opcional; mantenlo en false si no usas ASP.NET hosting -->
		<serviceHostingEnvironment aspNetCompatibilityEnabled="false" />

	</system.serviceModel>
</configuration>
